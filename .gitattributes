# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.py text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
LICENSE text eol=lf
requirements.txt text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Binary files
*.mp4 binary
*.mov binary
*.avi binary
*.mkv binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.bmp binary
*.webp binary
*.ico binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.pyc binary
*.pyo binary
*.so binary
*.dylib binary
*.dll binary
*.exe binary
*.app binary

# Git config files
.git* text eol=lf

# Python bytecode
*.pyc binary
*.pyo binary
*.pyd binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
.github/ export-ignore
tests/ export-ignore
*.md export-ignore
add_copyright_headers.py export-ignore

# Language detection overrides (if needed)
*.py linguist-language=Python
*.sh linguist-language=Shell
*.bat linguist-language=Batchfile
